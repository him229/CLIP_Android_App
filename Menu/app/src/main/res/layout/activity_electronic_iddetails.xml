<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.himankyadav.clip.ElectronicIDDetails">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText19"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Website Name"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText20"
        android:layout_below="@+id/editText19"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Username"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText21"
        android:layout_below="@+id/editText20"
        android:layout_centerHorizontal="true"
        android:hint="Password"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText22"
        android:layout_below="@+id/editText21"
        android:layout_centerHorizontal="true"
        android:hint="Security Question?"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText23"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editText22"
        android:hint="Answer to your security question"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="SAVE"
        android:id="@+id/button18"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/niceButton"/>
</RelativeLayout>
