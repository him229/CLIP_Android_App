<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group6.cse3310.clip.education.Add_School_Applied">

    <Button
        android:id="@+id/submit_school_applied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:text="@string/button_submit"
        android:onClick="submit"/>

    <EditText
        android:id="@+id/school_applied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        android:hint="@string/school_applied" />

    <EditText
        android:id="@+id/degree_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/school_applied"
        android:layout_centerHorizontal="true"
        android:hint="@string/degree_type" />

    <EditText
        android:id="@+id/area_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/degree_type"
        android:layout_centerHorizontal="true"
        android:hint="@string/area_study" />

    <EditText
        android:id="@+id/application_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/area_study"
        android:layout_centerHorizontal="true"
        android:hint="@string/application_deadline" />

    <EditText
        android:id="@+id/application_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/application_deadline"
        android:layout_centerHorizontal="true"
        android:hint="@string/application_cost" />

    <EditText
        android:id="@+id/yearly_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/application_deadline"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/application_deadline"
        android:layout_below="@+id/application_cost"
        android:hint="@string/yearly_cost" />

</RelativeLayout>
