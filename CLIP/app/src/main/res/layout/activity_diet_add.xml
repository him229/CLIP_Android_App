<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="health.DietAdd"
android:orientation="vertical">

<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:id="@+id/addDietSubmitButton"
    android:layout_gravity="center_horizontal"
    android:onClick="submit"
    style="@style/niceButton" />


<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/addDietNameEditText"
    android:hint="Name of Diet"
    android:layout_gravity="center_horizontal" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/addDietDescriptionEditText"
    android:hint="Description of Diet"
    android:layout_gravity="center_horizontal" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/addDietStartEditText"
    android:hint="Start Date of Diet"
    android:inputType="date"
    android:layout_gravity="center_horizontal" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/addDietEndEditText"
    android:hint="End date of Diet"
    android:inputType="date"
    android:layout_gravity="center_horizontal" />

</LinearLayout>

