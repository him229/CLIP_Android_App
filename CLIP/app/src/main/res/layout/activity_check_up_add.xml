<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="health.CheckUpAdd"
android:orientation="vertical">

<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:id="@+id/addCheckUpSubmitButton"
    android:layout_gravity="center_horizontal"
    android:onClick="submit"
    style="@style/niceButton" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/addCheckUpDateEditText"
    android:hint="Date"
    android:layout_gravity="center_horizontal" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/addCheckUpCholesterolEditText"
    android:hint="Cholesterol"
    android:layout_gravity="center_horizontal" />


<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Blood Pressure"
    android:id="@+id/addCheckUpBpEditText" />


<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Weight"
    android:id="@+id/addCheckUpWeightEditText" />


<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Tests Taken"
    android:id="@+id/addCheckUpTestEditText" />

</LinearLayout>
